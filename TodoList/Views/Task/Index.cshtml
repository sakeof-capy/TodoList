@model IEnumerable<TodoList.Data.Domain.TodoListTask>
@{
    ViewData["Title"] = "Todo List Tasks";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New Task</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Owner Email</th>
            <th>Title</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>Is Complete</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
                <tr>
                    <td>@task.OwnerEmail</td>
                    <td>@task.Title</td>
                    <td>@task.Description</td>
                    <td>@(task.DueDate.HasValue ? task.DueDate.Value.ToString("MM/dd/yyyy") : "-")</td>
                    <td>@(task.IsComplete ? "Yes" : "No")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@task.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@task.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@task.Id">Delete</a>
                    </td>
                </tr>
        }
    </tbody>
</table>
