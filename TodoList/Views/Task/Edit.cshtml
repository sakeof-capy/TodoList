@model TodoList.Models.TaskViewModel
@{
    ViewData["Title"] = "Edit Todo List Task";
}

<h1>Edit Todo List Task</h1>

<form asp-action="Edit">
    <div>
        <label asp-for="Title">Title:</label>
        <input asp-for="Title" class="form-control" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Description">Description:</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="IsComplete">Is Complete:</label>
        <input asp-for="IsComplete" class="form-check-input" />
        <span asp-validation-for="IsComplete" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
