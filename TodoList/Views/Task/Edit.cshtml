@model TodoList.Models.TaskViewModel
@{
    ViewData["Title"] = "Edit Task";
    Layout = "~/Views/Shared/_TaskLayout.cshtml";
}
<div class="task-header-panel">
    <h1 class="task-heading">Edit Todo List Task</h1>
</div>
<form asp-action="Edit" method="post" class="form-group">
    <div class="form-control">
        <label asp-for="Title">Title:</label>
        <input asp-for="Title" class="input-field" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-control">
        <label asp-for="Description">Description:</label>
        <textarea asp-for="Description" class="input-field"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-control">
        <label asp-for="IsComplete">Is Complete:</label>
        <input asp-for="IsComplete" type="checkbox" class="form-check-input" />
        <span asp-validation-for="IsComplete" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
