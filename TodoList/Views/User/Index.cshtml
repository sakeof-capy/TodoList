@model IEnumerable<TodoList.Data.Domain.TodoListUser>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login Page</title>
    <!-- Add references to Bootstrap and your custom CSS here -->
</head>
<body>
    <div class="container">
        <div class="login-container">
            <div class="login-card">
                <h2 class="welcome-title">Welcome!</h2>
                <form asp-action="Login" method="post" class="login-form">
                    <div class="form-group">
                        <label for="email" class="label-email">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="form-group">
                        <label for="password" class="label-password">Password</label>
                        <input type="password" class="form-control" id="password" name="password" required>
                    </div>
                    <div class="button-container">
                        <button type="submit" class="btn btn-primary">Log in</button>
                        <div class="separator-line"></div>
                        <a href="@Url.Action("Create", "User")" class="btn btn-secondary">Sign Up</a>
                    </div>
                </form>
            </div>
            <div class="image-container">
                <!-- Image of a person with a laptop here -->
            </div>
        </div>
    </div>
</body>
</html>
